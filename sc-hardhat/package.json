{
  "license": "UNLICENSED",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier --check 'contracts/**/*.sol'",
    "lint:ts": "eslint . --ext .ts && prettier --check '**.ts'",
    "prettier:sol": "prettier --write 'contracts/**/*.sol'",
    "prettier:ts": "prettier --write '**.ts'",
    "build:circuit:compile": "npx circom circuits/verifiableCredentials.circom -o circuits/artifacts/verifiableCredentials.json && npx snarkjs info -c circuits/artifacts/verifiableCredentials.json",
    "build:circuit:setup": "npx snarkjs setup --protocol groth -c circuits/artifacts/verifiableCredentials.json --pk circuits/artifacts/verifiableCredentials_proving_key.json --vk circuits/artifacts/verifiableCredentials_verification_key.json",
    "build:circuit:witness": "npx snarkjs calculatewitness --circuit circuits/artifacts/verifiableCredentials.json --input circuits/input.json --verbose"

  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/hardhat-upgrades": "3.0.5",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/circomlibjs": "^0.1.6",
    "@types/mocha": "^10.0.6",
    "@types/snarkjs": "^0.7.8",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chai": "4.3.7",
    "circom": "0.0.35",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "ethers": "^6.13.1",
    "hardhat": "2.20.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-storage-layout": "^0.1.7",
    "hardhat-tracer": "1.1.1",
    "merkletreejs": "^0.4.0",
    "operator-filter-registry": "^1.3.1",
    "prettier": "^2.8.0",
    "prettier-plugin-solidity": "^1.0.0",
    "snarkjs": "0.1.20",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  }
}
